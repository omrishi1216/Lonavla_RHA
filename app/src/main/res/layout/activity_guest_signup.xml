<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/child_img3" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="#000000" />


    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="25dp"
        android:text="Sign Up"
        android:textColor="#28D533"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up"
        android:layout_centerVertical="true"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="5dp"
        android:text="Name"
        android:textColor="#28D533"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/name_guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="5dp" />


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_guest"
        android:layout_centerVertical="true"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="5dp"
        android:text="Email"
        android:textColor="#28D533"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/email_guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:textColor="#ffffff" />


    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_guest"
        android:layout_centerVertical="true"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="5dp"
        android:text="Password"
        android:textColor="#28D533"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/password_guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:textColor="#ffffff" />


    <TextView
        android:id="@+id/confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_guest"
        android:layout_centerVertical="true"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="5dp"
        android:text="Confirm Password"
        android:textColor="#28D533"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/confirm_password_guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm_password"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:textColor="#ffffff" />


    <Button
        android:id="@+id/login_button"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_password_guest"
        android:layout_margin="5dp"
        android:background="@drawable/buttton_shape"
        android:text="Sign Up">

    </Button>


    <TextView
        android:id="@+id/signin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:text="Already have an Account, Sign In"
        android:textColor="#B5FFFFFF">


    </TextView>


</RelativeLayout>